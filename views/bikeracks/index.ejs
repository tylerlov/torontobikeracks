<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
<div class="mt-3 mb-3">
    <h1>All Bike Racks</h1>
</div>
<% for (let bikerack of bikeracks){%>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <%if(bikerack.images.length) {%>
            <img class="img-fluid" alt="" src="<%=bikerack.images[0].url%>" crossorigin=""> 
            <% }else {%>
            <img class="img-fluid" alt="Image of the a bike rack"
                src="https://res.cloudinary.com/ds2hafwml/image/upload/v1655896331/Toronto%20Bike%20Racks/image_not_available.jpg" crossorigin="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= bikerack.location %> </h5>

                <p class="card-text"><%= bikerack.description %></p>
                <p class="card-text">
                    <small class="text-muted">Type: <%= bikerack.title%> - Capacity: <%= bikerack.capacity%></small>
                </p>
                <a class="btn btn-primary" href="/bikeracks/<%=bikerack._id%>">View Comments</a>
            </div>
        </div>
    </div>
</div>
<% }%>
</div>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const bikeracks = { features: <%- JSON.stringify(bikeracks) %>}
</script>

<script src="/javascripts/clustermap.js"></script>