<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/bikeracks/<%=bikerack._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" id="title" name="bikerack[title]" required
                    value="<%=bikerack.title %>" >
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="bikerack[location]" required
                    value="<%=bikerack.location %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Add Images</label>
                <div class="input-group">
                <input name="image" id="image" multiple type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload">
              </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="capacity">Capacity</label>
                <div class="input-group">
                    <span class="input-group-text" id="capacity-label">$</span>
                    <input type="text" class="form-control" id="capacity" placeholder="0" aria-label="capacity" required
                        aria-describedby="capacity-label" name="bikerack[capacity]" value="<%=bikerack.capacity %>">
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="bikerack[description]"><%= bikerack.description%></textarea>
            </div>

            <div class="mb-3">
                <% bikerack.images.forEach(function(img,i) {  %>
                    <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%= i %>">Delete</label>
                <% } )%>
            </div>

            <div class="mb-3">
                <button class="btn btn-info">Update Bikerack</button>
            </div>
        </form>
        <a href="/bikeracks/<%= bikerack._id%>">Back To Bikerack</a>

    </div>
</div>

<script>
    // Example starter JavaScript for disabling form submissions if there are invalid fields
    (function() {
      'use strict';
      window.addEventListener('load', function() {
        // Fetch all the forms we want to apply custom Bootstrap validation styles to
        var forms = document.getElementsByClassName('validated-form');
        // Loop over them and prevent submission
        var validation = Array.prototype.filter.call(forms, function(form) {
          form.addEventListener('submit', function(event) {
            if (form.checkValidity() === false) {
              event.preventDefault();
              event.stopPropagation();
            }
            form.classList.add('was-validated');
          }, false);
        });
      }, false);
    })();
</script>